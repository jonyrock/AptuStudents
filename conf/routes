# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

GET     /students                       controllers.Students.list
GET     /students/new                   controllers.Students.create
POST    /students                       controllers.Students.save
GET     /student/:id                    controllers.Students.edit(id: Long)
POST    /student/:id                    controllers.Students.update(id: Long)
DELETE  /student/:id                    controllers.Students.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file                   controllers.Assets.at(path="/public", file)
