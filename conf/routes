# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

GET     /students                       controllers.Students.list
GET     /students/new                   controllers.Students.createForm
POST    /students                       controllers.Students.create
GET     /student/:id                    controllers.Students.show(id: Int)
PUT     /student/:id                    controllers.Students.update(id: Int)
DELETE  /student/:id                    controllers.Students.delete(id: Int)


# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file                   controllers.Assets.at(path="/public", file)
