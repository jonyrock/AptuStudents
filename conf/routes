# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

GET     /students                       controllers.Application.students
GET     /students/new                   controllers.Application.studentCreate
GET     /student/:id                    controllers.Application.student(id: Int)

GET     /courses/                       controllers.Application.courses
GET     /courses/new                    controllers.Application.courseCreate
GET     /course/:id                     controllers.Application.course(id: Int)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file                   controllers.Assets.at(path="/public", file)
